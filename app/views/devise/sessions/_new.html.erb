<h4 class="white">Sign In</h4>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="large-12 columns">
      <%= f.email_field :email, :autofocus => true, :placeholder=>"Email address" %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.password_field :password, :placeholder=>"Password" %>
      <p class="small left white"> Not a member yet? <%= link_to 'Sign up.', "#", :id=>"signup" %> </p>
    </div>
  </div>
  
  <% if devise_mapping.rememberable? -%>
    <div><%#= f.check_box :remember_me %> <%#= f.label :remember_me %></div>
  <% end -%>
  
  
  <div><%= f.submit "Sign in", :class=>"button outline-button" %></div>

  <%= link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook) %>
  
<% end %>

