<h1>Listing maps</h1>

<table>
  <tr>
    <th>City</th>
    <th>State</th>
    <th>Lat</th>
    <th>Long</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @maps.each do |map| %>
  <tr>
    <td><%= map.city %></td>
    <td><%= map.state %></td>
    <td><%= map.lat %></td>
    <td><%= map.long %></td>
    <td><%= map.user_id %></td>
    <td><%= link_to 'Show', map %></td>
    <td><%= link_to 'Edit', edit_map_path(map) %></td>
    <td><%= link_to 'Destroy', map, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

